---
interface Props {
  title: string;
  description: string;
  icon: string;
  href: string;
}

const { title, description, icon, href } = Astro.props;
---

<a href={href} class="group block bg-white rounded-2xl p-6 md:p-8 shadow-sm hover:shadow-lg transition-all duration-300 border border-gray-100">
  <div class="w-12 h-12 bg-rabar-blue/10 rounded-xl flex items-center justify-center mb-4 group-hover:bg-rabar-blue group-hover:scale-110 transition-all duration-300">
    <span class="text-2xl group-hover:brightness-0 group-hover:invert transition-all duration-300" set:html={icon} />
  </div>
  <h3 class="text-lg font-semibold text-rabar-navy mb-2 group-hover:text-rabar-blue transition-colors">
    {title}
  </h3>
  <p class="text-gray-600 text-sm leading-relaxed">
    {description}
  </p>
  <div class="mt-4 flex items-center text-rabar-blue text-sm font-medium">
    Meer info
    <svg class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </div>
</a>
