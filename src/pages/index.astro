          {posts.map((post) => (
            <BlogPostPreview
              title={post.title}
              excerpt={post.excerpt}
              date={post.published_at}
              slug={post.slug}
              image={post.feature_image || undefined}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-16 md:py-24">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
