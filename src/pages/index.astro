    <section class="pt-24 md:pt-32 pb-16 md:pb-24 bg-gradient-to-b from-white to-rabar-light">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="max-w-3xl">
